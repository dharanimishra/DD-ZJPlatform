<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springs.persistence.ComponentTypeMapper" >
  <resultMap id="BaseResultMap" type="com.springs.domain.ComponentType" >
    <id column="componenttypeid" property="componenttypeid" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    componenttypeid, name, description
  </sql>
  <insert id="insertSelective" parameterType="com.springs.domain.ComponentType" >
    insert into componenttype
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="componenttypeid != null" >
        componenttypeid,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="description != null" >
        description,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="componenttypeid != null" >
        #{componenttypeid,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="description != null" >
        #{description,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.springs.domain.ComponentType" >
    update componenttype
    <set >
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="description != null" >
        description = #{description,jdbcType=VARCHAR},
      </if>
    </set>
    where componenttypeid = #{componenttypeid,jdbcType=INTEGER}
  </update>
  
  	<select id="getCompTypeById" resultType="String">  
		select name from componenttype where componenttypeid=#{compTypeId}
	</select>

  	<select id="getCompTypeByName" resultType="Integer">  
		select componenttypeid from componenttype where name = #{componetType}
	</select>
  
</mapper>