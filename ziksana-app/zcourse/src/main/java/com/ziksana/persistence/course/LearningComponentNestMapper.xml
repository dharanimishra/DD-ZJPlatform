<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ziksana.persistence.course.LearningComponentNestMapper">

	<insert id="saveComponentNest" parameterType="com.ziksana.domain.course.Enrichment"
		useGeneratedKeys="true" keyProperty="componentNestId" keyColumn="componentnestid">
		insert into corenrichment
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="creationdate != null">
				creationdate,
			</if>
			<if test="nestlevel != null">
				nestlevel,
			</if>
			<if test="parentlearningcomponentid != null">
				parentlearningcomponentid,
			</if>
			<if test="nestlearningcomponentid != null">
				nestlearningcomponentid,
			</if>
		</trim>
		<trim prefix=" values (" suffix=")" suffixOverrides=",">
			sysdate(),
			<if test="nestlevel != null">
				#{nestLevel,jdbcType=INTEGER},
			</if>
			<if test="learningComponentParent != null">
				#{learningComponentParent.learningComponentId,jdbcType=INTEGER},
			</if>
			<if test="nestLearningComponent != null">
				#{nestLearningComponent.learningComponentId,jdbcType=INTEGER},
			</if>
		</trim>
		<selectKey keyProperty="componentNestId" resultType="int"
			order="AFTER">
			SELECT LAST_INSERT_ID();
		</selectKey>
	</insert>


</mapper>