<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ziksana.persistence.course.CourseTagcloudMapper">

	<insert id="save" parameterType="com.ziksana.domain.course.CourseTagcloud"
		useGeneratedKeys="true" keyProperty="courseTagCloudId" keyColumn="coursetagcloudid">
		insert into corcoursetagcloud
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="creationdate !=null">
				creationdate,
			</if>
			<if test="tagname!=null">
				tagname,
			</if>
			<if test="tagtype!=null">
				tagtype,
			</if>
			<if test="courseid!=null">
				courseid,
			</if>
			<if test="memberroleid!=null">
				memberroleid,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			sysdate(),
			<if test="tagname!=null">
				#{tagName,jdbcType=VARCHAR},
			</if>
			<if test="tagType!=null">
				#{tagTypeId,jdbcType=INTEGER},
			</if>
			<if test="course!=null">
				#{course.courseId,jdbcType=INTEGER},
			</if>
			<if test="creatingMember!=null">
				#{creatingMember.memberRoleId,jdbcType=INTEGER},
			</if>
		</trim>
		<selectKey keyProperty=courseTagCloudId resultType="int"
			order="AFTER">
			SELECT LAST_INSERT_ID();
		</selectKey>
	</insert>

	<update id="update" parameterType="com.ziksana.domain.course.CourseTagcloud">
		update corcoursecontentsecurity
		<set>
			<if test="tagname!=null">
				#{tagName,jdbcType=VARCHAR},
			</if>
			<if test="tagType!=null">
				#{tagTypeId,jdbcType=INTEGER},
			</if>
		</set>
		where coursetagcloudid = #{courseTagCloudId,jdbcType.INTEGER}
	</update>
</mapper>